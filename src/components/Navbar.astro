---
const navItems = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Rules", href: "/rules" },
  { name: "Contact", href: "/contact" },
  { name: "Donate", href: "/donate" },
];

const currentPath = Astro.url.pathname;
import '../styles/global.css';
---
<nav class="navbar">
  <div class="container nav-inner">
    <a href="/" class="logo nav-title">The Shattered Crown</a>
    <input type="checkbox" id="nav-toggle" class="nav-toggle" />
    <label for="nav-toggle" class="nav-toggle-label hamburger">
      <span></span>
      <span></span>
      <span></span>
    </label>
    <ul class="nav-links" id="nav-menu">
      <li>
        <a href="/" class={currentPath === "/" ? "active" : ""}>Home</a>
      </li>
      <li>
        <a href="/about" class={currentPath === "/about" ? "active" : ""}>About</a>
      </li>
      <li>
        <a href="/rules" class={currentPath === "/rules" ? "active" : ""}>Rules</a>
      </li>
      <li>
        <a href="/donate" class={currentPath === "/donate" ? "active" : ""}>Donate</a>
      </li>
      <li>
        <a href="/contact" class={currentPath === "/contact" ? "active" : ""}>Contact</a>
      </li>
    </ul>
  </div>
</nav>

<style>
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

:root {
  --primary: #c9a15a;
}

.navbar {
  background: #222;
  color: #fff;
  padding: 0.5rem 0;
  border-bottom: 2px solid var(--primary);
}
.container {
  max-width: 1100px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.logo {
  display: flex;
  align-items: center;
  font-family: 'MedievalSharp', serif;
  font-size: 1.5rem;
  color: var(--primary);
  text-decoration: none;
}
.logo img {
  margin-right: 0.7em;
}
.nav-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.logo.nav-title {
  color: #bfa046;
  font-family: 'Cinzel', serif;
  font-size: 1.3rem;
  font-weight: bold;
  letter-spacing: 1px;
  margin-left: 1.5rem;
  text-decoration: none;
}
.nav-links {
  list-style: none;
  display: flex;
  gap: 2em;
  margin: 0;
  transition: right 0.3s;
  display: flex;
  gap: 0.65rem;
  list-style: none;
  margin: 0 1.5rem 0 0;
  padding: 0;
  align-items: center;
  transition: all 0.3s;
}
.nav-links a {
  color: #fff;
  text-decoration: none;
  font-weight: 700;
  transition: color 0.2s, background 0.2s;
  padding: 0.4em 1em;
  border-radius: 6px;
  display: inline-block;
  font-family: 'MedievalSharp', serif;
  font-size: 1.1rem;
  border: none;
  background: none;
  box-shadow: none;
  border-bottom: none; /* Remove underline/border */
  color: #bfa046;
  text-decoration: none;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  transition: color 0.2s;
  position: relative;
  display: inline-block;
  background: none;
  font-family: 'MedievalSharp', serif;
  font-size: 1.1rem;
  border: none;
  box-shadow: none;
}
.nav-links a.active,
.nav-links a:hover {
  color: #222 !important;
  background: var(--primary) !important;
  font-weight: bold;
  box-shadow: 0 2px 8px #c9a15a44;
  text-decoration: none !important;
  border-bottom: none !important;
}
.nav-links a::after {
  display: none;
  /* The underline effect is now removed */
}

/* Hamburger styles */
.nav-toggle {
  display: none;
}
.nav-toggle-label {
  display: none;
  flex-direction: column;
  cursor: pointer;
  margin-right: 1.5rem;
  width: 32px;
  height: 32px;
  justify-content: center;
  position: relative;
  gap: 5px;
}
.nav-toggle-label span {
  display: block;
  height: 4px;
  width: 100%;
  background: #bfa046;
  border-radius: 2px;
  transition: 0.3s;
}
.hamburger span:nth-child(1) { top: 6px; }
.hamburger span:nth-child(2) { top: 14px; }
.hamburger span:nth-child(3) { top: 22px; }

/* Responsive styles */
@media (max-width: 800px) {
  .nav-links {
    display: none;
    flex-direction: column;
    width: 100%;
    gap: 0;
    margin: 0;
    background: #181c24;
    border-top: 1px solid #bfa046;
    overflow: hidden;
    max-height: 0;
    transition: max-height 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    position: absolute;
    left: 0;
    top: 100%;
    z-index: 99;
  }
  .nav-links li {
    width: 100%;
    margin: 0;
    padding: 0;
  }
  .nav-links a {
    display: block;
    width: 100%;
    padding: 1rem 1.5rem 0.5rem 1.5rem;
    background: none;
    border: none;
    border-radius: 0;
  }
  .hamburger, .nav-toggle-label {
    display: flex;
  }
  #nav-toggle:checked ~ .nav-links {
    display: flex !important;
    max-height: 500px;
  }
  .nav-inner {
    position: relative;
  }
  .logo.nav-title {
    margin-left: 1.5rem;
    font-size: 1.1rem;
  }
  #nav-toggle:checked + label.hamburger span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }
  #nav-toggle:checked + label.hamburger span:nth-child(2) {
    opacity: 0;
  }
  #nav-toggle:checked + label.hamburger span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }
}

/* Hide hamburger on desktop */
@media (min-width: 801px) {
  .nav-toggle-label {
    display: none;
  }
}

.dropdown-parent {
  position: relative;
  /* Remove flex styles to avoid alignment issues */
  /* display: flex;
  flex-direction: column;
  align-items: flex-start; */
}

.dropdown {
  display: none;
  position: absolute;
  left: 0;
  top: 100%;
  background: #232323;
  border: 2px solid var(--primary);
  border-radius: 0 0 10px 10px;
  min-width: 100%;      /* At least as wide as the parent link */
  width: max-content;   /* Only as wide as needed for content */
  z-index: 10;
  box-shadow: 0 4px 16px #0008;
  padding: 0.2em 0;
}

.dropdown-parent:hover > .dropdown,
.dropdown-parent:focus-within > .dropdown {
  display: block;
}

.dropdown li {
  width: 100%;
}

.dropdown a {
  color: var(--primary);
  padding: 0.5em 1em;    /* was 0.7em 1.2em */
  font-size: 1em;        /* was 1.08em */
  display: block;
  font-family: 'Roboto', serif;
  background: transparent;
  border: none;
  text-align: left;
  transition: background 0.2s, color 0.2s;
  text-decoration: none;
  font-weight: 700;
}

.dropdown a:hover {
  background: #181818;
  color: #fff;
}
</style>