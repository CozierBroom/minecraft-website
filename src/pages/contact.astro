---
import BaseLayout from '../layouts/BaseLayout.astro';
const description = "Contact the staff of The Shattered Crown Minecraft server for support or questions.";
---
<BaseLayout title="Contact" description={description}>
  <section class="contact section">
    <h1 class="contact-title">Need Help?</h1>
    <p class="contact-desc">
      For support, questions, or to contact staff, please join our Discord community.<br>
      Our team is active and ready to help you there!
    </p>
    <a href="https://discord.gg/xKNrjb4fry" target="_blank" rel="noopener noreferrer" class="cta-btn">
      Join Our Discord
    </a>
  </section>
</BaseLayout>

<style>
.contact.section {
  background: #222;
  border-radius: 14px;
  margin: 2rem auto;
  padding: 2.5rem 1.5rem;
  max-width: 900px; /* Match home page */
  box-shadow: 0 2px 16px #0003;
  border: 3px solid var(--primary, #c9a15a);
  text-align: center;
}
.contact-title {
  color: var(--primary, #c9a15a);
  font-size: 2em;
  margin-bottom: 0.2em;
  letter-spacing: 1px;
  text-shadow: 0 2px 8px #0008;
}
.contact-desc {
  color: #fff;
  margin-bottom: 2em;
  font-size: 1.1em;
  opacity: 0.9;
}
.cta-btn {
  display: inline-block;
  background: var(--primary, #c9a15a);
  color: #222;
  padding: 0.7em 1.6em;
  border-radius: 6px;
  font-weight: bold;
  text-decoration: none;
  box-shadow: 0 2px 8px #0004;
  transition: background 0.2s, color 0.2s, transform 0.15s;
  border: none;
  cursor: pointer;
  font-size: 1.1em;
  margin-bottom: 1.5em;
}
.cta-btn:hover {
  background: #ffe08a;
  color: #222;
  transform: scale(1.05);
}
@media (max-width: 700px) {
  .contact.section {
    padding: 1.2rem 0.5rem;
  }
  .contact-title {
    font-size: 1.3em;
  }
}
@media (max-width: 500px) {
  .contact.section {
    padding: 1.2rem 0.3rem;
  }
}
</style>